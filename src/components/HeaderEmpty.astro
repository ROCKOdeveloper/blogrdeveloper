---
import HeaderLink from "./HeaderLink.astro";
import logo from "../../public/logo.png";
import Progress from "./Progress.astro";
---

<header class="w-screen px-2 z-10 fixed top-0 bg-black/50 backdrop-blur-sm">
  <nav class="py-2 flex align-center justify-between">
    <img class="w-8 h-8 my-auto mx-0" src={logo.src} alt="Logo de Rdeveloper" />
    <div>
      <HeaderLink href="/blog">Volver</HeaderLink>
    </div>
  </nav>
  <Progress />
</header>
<style>
  nav a {
    padding: 0.25rem 0.75rem;
    color: var(--white);
    border-bottom: 2px solid var(--pink);
    text-decoration: none;
    border-radius: 0.5rem;
    background-color: #00000080;
  }
  nav a:hover {
    color: var(--pink);
  }
</style>
